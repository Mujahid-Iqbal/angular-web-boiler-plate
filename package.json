{
  "name": "web",
  "version": "0.0.0",
  "scripts": {
    "config": "ts-node -O '{\"module\": \"commonjs\"}' ./config.index.ts",
    "ng": "ng",
    "serve": "ng serve --host 0.0.0.0",
    "start": "ng serve --o",
    "build": "ng build",
    "build:prod": "yarn run config && ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "prepare": "husky install",
    "lint": "ng lint && stylelint \"src/**/*.scss\"",
    "write:env": "ngx-scripts env npm_package_version",
    "prettier": "prettier --write \"./src/**/*.{ts,js,html,scss}\"",
    "prettier:check": "prettier --list-different \"./src/**/*.{ts,js,html,scss}\"",
    "postinstall": "npm run prettier -s && husky install",
    "generate": "ng generate"
  },
  "private": true,
  "engines": {
    "node": ">=18",
    "yarn": "^1.22.*"
  },
  "dependencies": {
    "@angular-eslint/schematics": "^18.3.0",
    "@angular/animations": "^17.3.12",
    "@angular/common": "^17.3.12",
    "@angular/compiler": "^17.3.12",
    "@angular/core": "^17.3.12",
    "@angular/forms": "^17.3.12",
    "@angular/platform-browser": "^17.3.12",
    "@angular/platform-browser-dynamic": "^17.3.12",
    "@angular/router": "^17.3.12",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.8",
    "@angular-eslint/builder": "16.3.1",
    "@angular-eslint/eslint-plugin": "16.3.1",
    "@angular-eslint/eslint-plugin-template": "16.3.1",
    "@angular-eslint/template-parser": "16.3.1",
    "@angular/cli": "~17.3.8",
    "@angular/compiler-cli": "^17.3.12",
    "@ngneat/until-destroy": "^10.0.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "^8.51.0",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-prefer-arrow": "latest",
    "husky": "^8.0.1",
    "jasmine-core": "~4.5.0",
    "jwt-decode": "^3.1.2",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "postcss": "^8.4.5",
    "prettier": "^2.2.1",
    "prettier-eslint": "^16.1.2",
    "pretty-quick": "^3.1.0",
    "stylelint": "~14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "~7.0.0",
    "stylelint-config-standard": "~28.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.scss",
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "description": "Angular Web Boiler Plate",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArslanAmeer/angular-boilerplate.git"
  },
  "keywords": [
    "arslan ameer",
    "https://arslanameer.com"
  ],
  "author": "ArslanAmeer",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ArslanAmeer/angular-boilerplate/issues"
  },
  "homepage": "https://github.com/ArslanAmeer/angular-boilerplate#readme",
  "directories": {
    "doc": "docs"
  }
}
